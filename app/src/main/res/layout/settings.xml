                android:layout_column="2" />
        </TableRow>
        <!-- Seventh Row of Settings -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsTrend5Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Example 5"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_column="2" />
        </TableRow>
        <!-- Eighth Row of Settings -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsAcct1Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Account # 1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_column="2" />
        </TableRow>
        <!-- Ninth Row of Settings -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsAcct2Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
