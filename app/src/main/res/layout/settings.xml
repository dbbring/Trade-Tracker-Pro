<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:textSize="25dp"
                android:text="@string/settingsLbl" />
        </TableRow>
        <!-- First Row of Settings -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsThemeLbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Dark"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_column="2" />
        </TableRow>
        <!-- Second Row of Settings -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsExportEmailLbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="johnDoe@john.com"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_column="2" />
        </TableRow>
        <!-- Third Row of Settings -->
        <TableRow
            android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsTrend1Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Example 1"
                android:layout_column="2" />
        </TableRow>
        <!-- Fourth Row of Settings -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsTrend2Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="20dp"
                android:layout_column="1"  />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Example 2"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:layout_column="2" />
        </TableRow>
        <!-- Fifth Row of Settings -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settingsTrend3Lbl"
                android:layout_gravity="left"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
