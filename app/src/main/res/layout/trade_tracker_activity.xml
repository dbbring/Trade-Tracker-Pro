<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    >

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/home_btn"
            android:src="@drawable/ic_home"
            android:contentDescription="Home Button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="60dp"
            android:layout_gravity="left"
            />
        <ImageButton
            android:id="@+id/performance_btn"
            android:src="@drawable/ic_performance"
            android:contentDescription="Performance Button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="60dp"
            android:layout_gravity="center" />
        <ImageButton
            android:id="@+id/entry_button"
            android:src="@drawable/ic_entry"
            android:contentDescription="Entry Button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="60dp"
            android:layout_gravity="center" />
        <ImageButton
            android:id="@+id/settings_button"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings Button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="60dp"
            android:layout_gravity="right" />
    </LinearLayout>
</RelativeLayout>