<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="75dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">
            <!-- Message Area-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:textSize="20dp"
                android:text="Important Message Area" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:gravity="center">
            <!-- Total number of Trades -->
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:text="@string/homeTotalTradesLbl"
                    android:layout_gravity="left"
                    android:layout_column="1"  />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textSize="75dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:text="5"
                    android:layout_gravity="left" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">
            <!-- Portfolio Percentage Change -->
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:text="@string/homePortChgPercentLbl"
                    android:layout_gravity="left"
                    android:layout_column="1"  />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:textSize="35dp"
                    android:text="18%"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <!-- Portfolio Money Change -->
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:text="@string/homePortChgMoneyLbl"
                    android:layout_gravity="right" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textSize="35dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:text="$426.25"
                    android:layout_gravity="right" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.27">
            <!-- Losing Trend -->
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:text="@string/homeLosingTrendLbl"
                    android:layout_gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_column="1"  />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:text="chart goes here"
                    android:layout_gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp" />
            </LinearLayout>
            <!-- Winning Trend-->
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="vertical">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:text="@string/homeWinningTrendLbl"
                    android:layout_gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp"
                    android:layout_column="1"  />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:text="chart goes here"
                    android:layout_gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="20dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
    </ScrollView>
</RelativeLayout>