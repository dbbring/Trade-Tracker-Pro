<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Activty Label Detail View-->
        <TextView
            android:id="@+id/detailViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/detailsLbl"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Ticker Area -->
        <TextView
            android:id="@+id/detailViewTicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsTickerLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewTitle" />
        <!-- Date Area-->
        <TextView
            android:id="@+id/detailViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/ap_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewTitle" />


        <!-- Entry Price Area-->
        <TextView
            android:id="@+id/detailViewEntryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsEntryPriceLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewTicker" />
        <!-- Exit Price Area -->
        <EditText
            android:id="@+id/detailViewExitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="false"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsExitPriceLbl"
            android:textColor="@color/ap_black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewDate" />


        <!-- Position Size Entry -->
        <TextView
            android:id="@+id/detailViewSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsSizeLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewEntryPrice" />
        <!-- Percentage Change Area-->
        <TextView
            android:id="@+id/detailViewNetChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsChangeLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewExitPrice" />


        <!-- Category Selection -->
        <TextView
            android:id="@+id/detailViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsCatLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewSize" />
        <!-- Account Selection -->
        <TextView
            android:id="@+id/detailViewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsAcctLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewNetChange" />


        <!-- Trade Details Entry Area -->
        <TextView
            android:id="@+id/detailViewEntryTradeDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:paddingTop="50dp"
            android:paddingBottom="6dp"
            android:text="@string/detailsDescripLbl"
            android:textColor="@color/ap_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewCategory" />

        <EditText
            android:id="@+id/detailViewExitTradeDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:hint="Exit Notes..."
            android:minLines="6"
            android:paddingTop="50dp"
            android:paddingBottom="6dp"
            android:textColor="@color/ap_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewEntryTradeDescrip" />

        <Button
            android:id="@+id/detailsDeleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="@string/detailsDeleteBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailViewExitTradeDescrip" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>